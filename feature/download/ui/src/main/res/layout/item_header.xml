<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/divider"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilName"
            style="@style/TextInputOutlinedWithCornersStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:hint="@string/download_field_header_key_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etName"
                style="@style/DownloadEditTextStyle" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilValue"
            style="@style/TextInputOutlinedWithCornersStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:hint="@string/download_field_header_key_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etValue"
                style="@style/DownloadEditTextStyle" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="100dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@+id/ibRemove"
        android:background="@color/black" />

    <ImageButton
        android:id="@+id/ibRemove"
        style="@style/Widget.AppCompat.ActionButton"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_close_clear_cancel" />

</RelativeLayout>