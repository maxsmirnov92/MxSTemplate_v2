<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/textSizeMini</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">@dimen/defaultPadding</item>
        <item name="android:paddingEnd">@dimen/defaultPadding</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>

    <!--красная кнопка со скругленными углами-->
    <style name="Button.Primary">
        <item name="android:background">@drawable/selector_button_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Стандартная кнопка без бордюра -->
    <style name="BorderlessButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>
</resources>