<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">?attr/appHintColor</item>
        <item name="hintTextAppearance">@style/AppHintAppearance</item>
        <item name="helperTextTextAppearance">@style/AppHintAppearance</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="errorTextColor">?attr/appErrorColor</item>
<!--        <item name="boxStrokeColor">?attr/appHintColor</item>-->
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextInputOutlinedWithCorners" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--        <item name="boxBackgroundColor">#f0f5fa</item>-->
        <!--        <item name="boxStrokeColor">@color/colorPrimary</item>-->
        <!--        <item name="boxStrokeWidth">0dp</item>-->
        <!--        <item name="boxStrokeWidthFocused">0dp</item>-->
        <!--        <item name="boxBackgroundMode">filled</item>-->
        <!--        <item name="android:background">#f0f5fa</item>-->
        <item name="boxCornerRadiusBottomEnd">@dimen/textInputCornersRadius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/textInputCornersRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/textInputCornersRadius</item>
        <item name="boxCornerRadiusTopStart">@dimen/textInputCornersRadius</item>
        <item name="cursorColor">?attr/colorAccent</item>
        <item name="cursorErrorColor">@color/textColorError</item>
    </style>

    <style name="AppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/appEditTextColor</item>
        <item name="android:textCursorDrawable">@drawable/shape_cursor_accent</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="InputText" parent="AppEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSizeMini</item>
        <item name="android:textColor">@drawable/selector_color_text_primary</item>
        <item name="android:backgroundTint">@color/textColorHighlight</item>
    </style>

    <style name="InputText.Large">
        <item name="android:textSize">@dimen/textSizeExtraLarge</item>
    </style>

    <style name="SingleLineInputText" parent="InputText">
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">textNoSuggestions|textCapCharacters</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <!--        <item name="android:background">@drawable/selector_background_edit_text</item>-->
    </style>

    <style name="SingleLineInputText.Large">
        <item name="android:textSize">@dimen/textSizeExtraLarge</item>
    </style>

</resources>