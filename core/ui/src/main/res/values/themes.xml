<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <!--    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!--    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">-->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="colorControlHighlight">@color/colorControlActivated</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <!-- Customize your theme here. -->
        <item name="appHintColor">@color/textColorHint</item>
        <item name="appErrorColor">@color/textColorError</item>
        <item name="appEditTextColor">@color/textColorPrimary</item>
        <item name="textInputStyle">@style/AppTextInputLayout</item>
        <item name="editTextStyle">@style/AppEditText</item>
        <item name="checkboxStyle">@style/CheckboxStyle</item>
        <item name="switchStyle">@style/SwitchStyle</item>
        <item name="searchViewStyle">@style/AppSearchViewStyle</item>
        <item name="autoCompleteTextViewStyle">@style/AppAutoCompleteStyle</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!--     Базовый шрифт для всего аппа   -->
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
</resources>