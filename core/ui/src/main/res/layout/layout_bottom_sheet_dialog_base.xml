<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_background_dialog"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/mark"
            android:layout_width="36dp"
            android:layout_height="4dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_background_white_corners"
            android:backgroundTint="@color/gray_alpha_70" />

        <ImageView
            android:id="@+id/ivClose"
            style="@style/Selectable.Normal"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="14dp"
            android:contentDescription="@string/close"
            android:padding="8dp"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@color/gray_alpha_70" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>